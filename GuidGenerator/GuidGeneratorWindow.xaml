<Window x:Class="GuidGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuidGenerator"
        mc:Ignorable="d"
        Title="GUID Generator" Height="450" Width="800">
	<Grid>
		<Button x:Name="generateButton" Content="Generate" HorizontalAlignment="Center" Margin="0,0,0,16" VerticalAlignment="Bottom" Height="32" Width="128" Click="generateButton_Click" RenderTransformOrigin="0.5,1"/>
		<ComboBox x:Name="formatSelector" VerticalAlignment="Top" />
		<TextBox x:Name="textBox" TextWrapping="Wrap" Margin="64,152,64,239" />

	</Grid>
</Window>
